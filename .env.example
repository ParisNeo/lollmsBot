# ============================================
# WHATSAPP CHANNEL
# ============================================

# WhatsApp backend type: 'web_js', 'twilio', or 'business_api'
WHATSAPP_BACKEND=

# For whatsapp-web.js backend (free, local):
# Path to store the bridge script and session data
WHATSAPP_WEB_JS_PATH=

# For Twilio backend (cloud API):
# Get from https://www.twilio.com/console
WHATSAPP_ACCOUNT_SID=
WHATSAPP_AUTH_TOKEN=
# Your Twilio WhatsApp number (e.g., +14155238886)
WHATSAPP_FROM_NUMBER=

# For WhatsApp Business API (official Meta API):
# Get from Meta Developer Console
WHATSAPP_API_TOKEN=
# Phone Number ID from Business Manager
WHATSAPP_FROM_NUMBER=
# Webhook verification secret
WHATSAPP_WEBHOOK_SECRET=

# Webhook port for Twilio/Business API (default: 8081)
WHATSAPP_WEBHOOK_PORT=8081

# COMMA-SEPARATED list of allowed phone numbers (optional, empty = allow all)
# Format: +1234567890,+441234567890
WHATSAPP_ALLOWED_USERS=

# COMMA-SEPARATED list of blocked phone numbers
WHATSAPP_BLOCKED_USERS=

# Require users to confirm before chatting (sends welcome message)
WHATSAPP_REQUIRE_CONFIRMATION=true
